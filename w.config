// WZ production
WeakDoubleBoson:ffbar2ZW = on      ! q qbar -> Z0 W+-

// W->qqbar' and Z->nunu
24:onMode = off
24:onIfAny = 1 2 3 4 5 6           ! q
23:onMode = off
23:onIfAny = 12 14 16              ! nu

// Automated Variations of Shower Parameters for Uncertainty Bands
// http://home.thep.lu.se/Pythia/pythia82html/Variations.html
// http://arxiv.org/abs/1605.08352
UncertaintyBands:doVariations = on
UncertaintyBands:List = { 
    alphaShi fsr:muRfac=0.5 isr:muRfac=0.5, 
    alphaSlo fsr:muRfac=2.0 isr:muRfac=2.0, 
    hardHi fsr:cNS=2.0 isr:cNS=2.0, 
    hardLo fsr:cNS=-2.0 isr:cNS=-2.0 
}
